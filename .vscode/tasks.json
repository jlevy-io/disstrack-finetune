{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Analyze Dataset",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "tools/analyze_dataset.py"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Filter Visual Grounding",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "tools/filter_visual.py"
      ],
      "group": "build"
    },
    {
      "label": "Convert to LLaVA",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "tools/convert_to_llava.py"
      ],
      "group": "build"
    }
  ]
}